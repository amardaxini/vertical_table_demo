<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
<title><%= h(yield(:title) || "Untitled") %></title>
   <%= stylesheet_link_tag 'grid','application' %>
    <%= javascript_include_tag :defaults %>
    <%= yield(:head) %>
    
</head>
<body>
 <div class="every_thing container_16 main">
    <div id="header">
      <div id="up_border"></div>
       <div id="blog_name"><h1>Product Review</h1></div>
        <div class="clear"></div>
        <div  id="menubar">
          <ul class="tab">
           <li class="li_tab <%= active_css_class('products')%>">
             <%= link_to "<span>Product</span>",products_path() %>
           </li>
          
              
          </ul>
       </div>
        <div class="clear"></div>
       <div id="menu_border"></div>
       
     
     </div>
    <div  id="wrapper">
      <div id="container" class="grid_11">
         <%- flash.each do |name, msg| -%>
           <%= content_tag :div, msg, :id => "flash_#{name}" %>
         <%- end -%>
     <!--   <%- if show_title? -%>
          <h1><%#=yield(:title) %></h1>
        <%- end -%>&nbsp;
        !-->      
        <%= yield %>
      </div>
      
      <div id="sidebar" class="grid_4">
        <%= yield :sidebar %>
      </div>
    </div>
    <div class="clear"></div>
    <div class="push"></div> 
  </div>
  <div class="clear"></div>
  <div id="footer" class="container_16">
    <div class="grid_16">
      Product Review Site
    </div>  
  </div>
</body>
</html>
